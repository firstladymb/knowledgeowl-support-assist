{
  "name": "KnowledgeOwl",
  "author": {
    "name": "KnowledgeOwl Support",
    "email": "support@knowledgeowl.com",
    "url": "https://www.knowledgeowl.com/home"
  },
  "termsConditionsURL": "https://www.knowledgeowl.com/home/terms-and-conditions",
  "parameters": [
	{
		"name": "apikey",
		"type": "text",
		"required": true,
		"secure": true
	},
	{
		"name": "kbid",
		"type": "text",
		"required": true,
		"secure": true
	},
	{
		"name": "articlelimit",
		"type": "number",
		"required": true,
		"default": 5
	},
	{
		"name": "ignoreSearchResults",
		"type": "checkbox",
		"default": false
	},
	{
		"name": "restrictedArticles",
    	"type": "checkbox",
      	"default": false
    },
    {
    	"name" : "readerGroups",
    	"type": "text"
    },
	{
		"name": "allowcreate",
		"type": "checkbox",
		"default": false
	},
	{
		"name": "createcategory",
		"type": "text"
	},
	{
		"name": "artstatus",
		"type": "text",
		"default": "Draft"
	}
  ],
  "domainWhitelist": ["app.knowledgeowl.com"],
  "defaultLocale": "en",
  "private": true,
  "location": {
    "support": {
      "ticket_sidebar": "assets/iframe.html"
    }
  },
  "singleInstall": false,
  "version": "1.0",
  "frameworkVersion": "2.0"
}
